namespace vsm;

table Message {
  timestamp:uint32;
  hops:uint32;
  source:NodeInfo;
  peers:[NodeInfo];
  entities:[Entity];
}

table NodeInfo {
  name:string;
  address:string (key);
  coordinates:[float];
  power_radius:float;
  sequence:uint32;
}

enum Filter : uint8 {
  ALL,
  NEAREST,
}

table Entity {
  name:string (key);
  filter:Filter;
  coordinates:[float];
  range:float;
  expiry:uint32;
  type:uint32;
  data:[uint8];
}
