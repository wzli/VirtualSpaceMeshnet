namespace vsm;

table Message {
  timestamp:uint32;
  priority:uint8;
  source:NodeInfo;
  peers:[NodeInfo];
  entities:[Entity];
}

table NodeInfo {
  name:string;
  address:string (key);
  coordinates:[float];
  power_radius:float;
  sequence:uint32;
}

table Entity {
  name:string (key);
  proximity_filter:uint8;
  coordinates:[float];
  range:float;
  expiry:uint32;
  type:uint32;
  data:[uint8];
}
